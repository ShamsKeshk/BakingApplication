<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="next_previous_button_style">
        <item name="android:layout_width">@dimen/next_previous_button_width</item>
        <item name="android:layout_height">@dimen/next_previous_button_height</item>
        <item name="android:layout_margin">@dimen/margin_8dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="card_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/card_view_margin</item>
        <item name="cardCornerRadius">@dimen/card_view_corner</item>
        <item name="elevation">@dimen/card_view_elevation</item>
    </style>

</resources>
