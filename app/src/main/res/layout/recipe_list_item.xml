<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/card_view_style"
    android:layout_height="@dimen/card_view_recipe_list_item_height"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground">
        <ImageView
            android:id="@+id/iv_recipe_image_view_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linear_layout_height"
            android:orientation="vertical"
            android:background="#80FFC107"
            android:layout_gravity="bottom|center">
            <TextView
                android:id="@+id/tv_recipe_name_text_view_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Cake Name"
                android:textSize="@dimen/primary_text_size"
                android:gravity="center"
                android:textColor="@color/primary_text"/>
            <TextView
                android:id="@+id/tv_recipe_servings_text_view_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Servings : 8"
                android:textSize="@dimen/text_size_16sp"
                android:gravity="center"
                android:textColor="@color/primary_text"/>
        </LinearLayout>
    </FrameLayout>


</android.support.v7.widget.CardView>